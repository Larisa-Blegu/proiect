@page
@model proiect.Pages.Inscrieri.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: AntiqueWhite; 
    }
</style>


<h1>Edit</h1>

<h4>Inscriere</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inscriere.ID" />
            <div class="form-group">
                <label asp-for="Inscriere.CursID" class="control-label"></label>
                <select asp-for="Inscriere.CursID" class="form-control" asp-items="ViewBag.CursID"></select>
                <span asp-validation-for="Inscriere.CursID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inscriere.TipBiletID" class="control-label"></label>
                <select asp-for="Inscriere.TipBiletID" class="form-control" asp-items="ViewBag.TipBiletID"></select>
                <span asp-validation-for="Inscriere.TipBiletID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inscriere.ClientID" class="control-label"></label>
                <select asp-for="Inscriere.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Inscriere.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
