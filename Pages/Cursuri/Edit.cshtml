@page
@model proiect.Pages.Cursuri.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-color: AntiqueWhite; 
    }
</style>

<h1>Edit</h1>

<h4>Curs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Curs.ID" />
            <div class="form-group">
                <label asp-for="Curs.Name" class="control-label"></label>
                <input asp-for="Curs.Name" class="form-control" />
                <span asp-validation-for="Curs.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curs.Description" class="control-label"></label>
                <input asp-for="Curs.Description" class="form-control" />
                <span asp-validation-for="Curs.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curs.Locatie" class="control-label"></label>
                <input asp-for="Curs.Locatie" class="form-control" />
                <span asp-validation-for="Curs.Locatie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curs.Date" class="control-label"></label>
                <input asp-for="Curs.Date" class="form-control" />
                <span asp-validation-for="Curs.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curs.ArtistID" class="control-label"></label>
                <select asp-for="Curs.ArtistID" asp-items="@((SelectList)ViewData["ArtistID"])" class="form-control"></select>
                <span asp-validation-for="Curs.ArtistID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curs.Price" class="control-label"></label>
                <input asp-for="Curs.Price" class="form-control" />
                <span asp-validation-for="Curs.Price" class="textdanger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
