@page
@model proiect.Pages.Clienti.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: AntiqueWhite; /* Codul de culoare pentru crem */
    }
</style>

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.ID" />
            <div class="form-group">
                <label asp-for="Client.ClientName" class="control-label"></label>
                <input asp-for="Client.ClientName" class="form-control" />
                <span asp-validation-for="Client.ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.ClientEmail" class="control-label"></label>
                <input asp-for="Client.ClientEmail" class="form-control" />
                <span asp-validation-for="Client.ClientEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
